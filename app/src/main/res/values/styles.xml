<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextViews -->
    <style name="dashboardButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/design_default_color_primary</item>
    </style>
    <style name="dashboardNumberView" parent="android:Widget.TextView">
        <item name="android:textSize">60sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">0</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="dashboardHeading" parent="android:Widget.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="dashboardSubheading" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Colours -->
    <color name="blue">#0066FF</color>
    <color name="light_blue">#1E90FF</color>
</resources>